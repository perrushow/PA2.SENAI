{% extends 'base.html.twig' %}

{% block title %}Marcação de Horario{% endblock %}
{% block content %}
    <div class="wrapper">
        <div class="container" style="margin-top: 50px">
            <form method="post" class="card">
                <div class="card-body">
                    <h1>Selecionar Horário</h1>
                    <div class="login-form">
                        {{ form_start(form) }} {# antes de adicionar os campos do formulário você inicia um bloco de formulário
                        e no final vc irá fechar esse bloco com form_end e o nome do form#}
                        <div class="form-group">
                            <label for="id" class="placeholder">Horários Disponíveis</label>
                            {{ form_widget(form.id, {'attr': {'class': 'form-control input-border-bottom'}}) }}
                            {# para cada input do formuário você irá usar o form_widget com o nome do formulário que está no controller
                             e o nome do campo que você pretende ler. A classe é copiada da documentação do atlantis
                             dependendo de qual efeito de CSS você quer para o seu form as divs anteriores também fazem parte
                             do layout do atlantis para deixar no estilo utilizado pelo framework#}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.confirme, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
{% block javascripts %}{% endblock %}