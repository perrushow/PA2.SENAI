{% extends 'base.html.twig' %}

{% block title %}Cadastro de Cliente{% endblock %}

{% block content %}
    <div class="wrapper">
    <div class="container" style="margin-top: 50px">
        <form method="post" class="card">
            <div class="card-body">
                <h1>Cadastro de Cliente</h1>
                <div class="login-form">
                    {{ form_start(form) }} {# antes de adicionar os campos do formulário iniciei um bloco de formulário
                    e no final fechei esse bloco com form_end e o nome do form #}
                    <div class="form-group">
                        <label for="clinome" class="placeholder">Nome Completo</label>
                        {{ form_widget(form.clinome, {'attr': {'class': 'form-control input-border-bottom'}}) }} {# aqui esta sendo puxado
                        o campo do form que foi criado no controller no caso clinome #}
                    </div>
                    <div class="form-group">
                        <label for="telefone" class="placeholder">Telefone</label>
                        {{ form_widget(form.telefone, {'attr': {'class': 'form-control input-border-bottom'}}) }}
                    </div>
                    <div class="form-group">
                        <label for="planos_idplanos" class="placeholder">Plano de Saúde
                        </label>
                        {{ form_widget(form.planos_idplanos, {'attr': {'class': 'form-control input-border-bottom'}}) }}
                        {# para cada input do formuário usei  o form_widget com o nome do formulário que está no controller
                         e o nome do campo que devera ser lido. A classe é copiada da documentação do atlantis
                         dependendo de qual efeito de CSS você quer para o seu form #}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.confirme, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </form>
    </div>
    </div>
{% endblock %}
{% block javascripts %}{% endblock %}